
{{ form_start(form) }}
    {# {{ form_widget(form) }} #}
    <div class="container">
        <div class="form-group row">
            <div class="col-sm-3 col-form-label">
                {{ form_label(form.nom) }}
            </div>
            <div class="col-sm-9">
                {{ form_widget(form.nom) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-3 col-form-label">
                {{ form_label(form.prenom) }}
            </div>
            <div class="col-sm-9">
                {{ form_widget(form.prenom) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-3 col-form-label">
                {{ form_label(form.niveau) }}
            </div>
            <div class="col-sm-9">
                {{ form_widget(form.niveau) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-3 col-form-label">
                {{ form_label(form.specialite) }}
            </div>
            <div class="col-sm-9">
                {{ form_widget(form.specialite) }}
            </div>
        </div>
            
        <div class="form-group row">
            <div class="col-sm-3 form-label">
                {{ form_label(form.sexe) }}
            </div>
            <div class=" d-flex justify-content-around col-sm-9 ">
                {% for radio in form.sexe %}
                    <div class=" justify-content-between">
                        {{ form_widget(radio, {'attr': {'class': 'form-check-input', 'id' : 'membershipRadios1'}}) }}
                        {{ form_label(radio, null, {'label_attr': {'class': 'form-check-label mt-1'}}) }}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="text-center"> <!-- Vous pouvez personnaliser la classe CSS selon vos besoins -->
        <button class="btn btn-gradient-primary me-2">{{ button_label|default('Enregister') }}</button>
        <button type="button" class="btn btn-Light" onclick="window.history.back();">Annuler</button>
    </div>
{{ form_end(form) }}
